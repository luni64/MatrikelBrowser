<UserControl
    x:Class="ArchiveBrowser.Bookmark"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    
    x:Name="UC">

    <Grid>
        <Image 
            x:Name="img" 
            Source="/arrow.png" 
            Stretch="Fill" VerticalAlignment="Center" 
            RenderTransformOrigin="0.5,0.5"
            PreviewMouseDown ="imgArr_PreviewMouseDown"
            PreviewMouseMove="imgArr_PreviewMouseMove"
            PreviewMouseUp ="imgArr_PreviewMouseUp"        
            Cursor="Hand">         
            
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        
        <TextBox 
            x:Name="txt"           
            Text="{Binding Text, ElementName=UC, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"         
            VerticalAlignment="Center"   Margin="0,0,20,0" Width="auto" MaxWidth="350" MinWidth="50"
            BorderThickness="0" Background="Transparent"
            FontWeight="SemiBold" FontSize="30" Foreground="Black" 
            HorizontalAlignment="Center" FontFamily="Arial Narrow"            
            />
    </Grid>
</UserControl>
